    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:gravity="center"
        android:orientation="vertical"
        tools:context=".userAuthentication.UserRegistration"
        app:layout_constraintTop_toBottomOf="parent"
        >

    <LinearLayout
                 android:orientation="vertical" android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center">


        <TextView
            android:id="@+id/smallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:gravity="center"/>




        <RadioGroup
            android:id="@+id/Register_radio_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="?android:listPreferredItemHeight"
            android:gravity="center"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/Register_radio_gender" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I'm "
                android:textColor="@android:color/black"
                android:gravity="start|center"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_gravity="center|left"/>

            <RadioButton
                android:id="@+id/radioButton_Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>

            <RadioButton
                android:id="@+id/radioButton_Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />

            <RadioButton
                android:id="@+id/radioButton_Others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other" />


            <!--                    android:onClick="OnClickRadioButton"-->
            <!--                     />-->

        </RadioGroup>




        <EditText
                android:id="@+id/Register_EnterFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                android:gravity="left"
                android:imeActionLabel="Sign in"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:hint="First Name*"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"
                android:textStyle="normal"
                android:drawableLeft="@drawable/name"
                app:layout_constraintTop_toBottomOf="parent" />
<!--        app:layout_constraintLeft_toLeftOf=""/>-->

    <EditText
        android:id="@+id/Register_EnterLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:hint="Last Name*"
        android:imeActionLabel="@string/action_sign_in_short"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:drawableLeft="@drawable/name"
        app:layout_constraintTop_toBottomOf="@id/Register_EnterFirstName"/>

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:hint="Mobile Number*"
            android:drawableLeft="@drawable/android"
            android:inputType="phone"
            android:selectAllOnFocus="true"
            app:layout_constraintTop_toBottomOf="@id/Register_radio_gender"/>

    <EditText
        android:id="@+id/Register_EmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:hint="Email Address*"
        android:imeActionLabel="@string/action_sign_in_short"
        android:drawableLeft="@drawable/mail"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@id/phone_number"/>

    <!--            <TextView android:id="@+id/passwordNew"-->
    <!--                android:layout_width="wrap_content"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:layout_marginTop="50dp"-->
    <!--                android:text="New Password:"-->
    <!--                android:textSize="15dp"-->
    <!--                android:textStyle="italic"-->
    <!--                android:layout_gravity="left"/>-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Register_EmailAddress">

            <EditText
                android:id="@+id/Register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password*"
                android:drawableLeft="@drawable/lock"
                android:drawableStart="@drawable/lock"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:selectAllOnFocus="true" />


        </com.google.android.material.textfield.TextInputLayout>



    <!--            <TextView android:id="@+id/Gender"-->
    <!--                android:layout_width="wrap_content"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:layout_marginTop="50dp"-->
    <!--                android:text="Gender:"-->
    <!--                android:textSize="15dp"-->
    <!--                android:textStyle="italic"-->
    <!--                android:layout_gravity="left"/>-->
    <Button
        android:id="@+id/Register"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:enabled="true"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/introbuttonshape" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes, I agree to terms of use*"
            />
        <!--            android:onClick="AfterNewRegistration"-->

     </LinearLayout>
</ScrollView>

