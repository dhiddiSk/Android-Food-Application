    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".newRegistration"
        app:layout_constraintTop_toBottomOf="parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
                 android:orientation="vertical" android:layout_width="match_parent"
                 android:layout_height="match_parent"
                android:gravity="center">
        <TextView
            android:id="@+id/smallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get registered and be sustainable!"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:gravity="center"/>



        <EditText
                android:id="@+id/Register_EnterFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="24dp"
                android:gravity="left"
                android:imeActionLabel="Sign in"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:hint="first name"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"
                android:textStyle="normal"
                android:drawableLeft="@drawable/name"
                app:layout_constraintTop_toBottomOf="parent" />
<!--        app:layout_constraintLeft_toLeftOf=""/>-->

    <EditText
        android:id="@+id/Register_EnterLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:hint="last name"
        android:imeActionLabel="@string/action_sign_in_short"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:drawableLeft="@drawable/name"
        app:layout_constraintTop_toBottomOf="@id/Register_EnterFirstName"/>

    <!--            <TextView android:id="@+id/Email"-->
    <!--                android:layout_width="wrap_content"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:layout_marginTop="50dp"-->
    <!--                android:text="Email:"-->
    <!--                android:textSize="15dp"-->
    <!--                android:textStyle="italic"-->
    <!--                android:layout_gravity="left"/>-->


    <RadioGroup
        android:id="@+id/Register_radio_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/Register_radio_gender" >
        <RadioButton
            android:id="@+id/radioButton_Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male"/>
        <!--                    android:onClick="OnClickRadioButton"-->
        <!--                    />-->

        <RadioButton
            android:id="@+id/radioButton_Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="female" />
        <!--                    android:onClick="OnClickRadioButton"-->
        <!--                     />-->

    </RadioGroup>
        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:hint="mobile"
            android:drawableLeft="@drawable/android"
            android:inputType="phone"
            android:selectAllOnFocus="true"
            app:layout_constraintTop_toBottomOf="@id/Register_radio_gender"/>

    <EditText
        android:id="@+id/Register_EmailAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:hint="email address"
        android:imeActionLabel="@string/action_sign_in_short"
        android:drawableLeft="@drawable/mail"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@id/phone_number"/>

    <!--            <TextView android:id="@+id/passwordNew"-->
    <!--                android:layout_width="wrap_content"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:layout_marginTop="50dp"-->
    <!--                android:text="New Password:"-->
    <!--                android:textSize="15dp"-->
    <!--                android:textStyle="italic"-->
    <!--                android:layout_gravity="left"/>-->


    <EditText
        android:id="@+id/Register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:hint="new password"
        android:drawableLeft="@drawable/lock"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Register_EmailAdress" />

    <!--            <TextView android:id="@+id/Gender"-->
    <!--                android:layout_width="wrap_content"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:layout_marginTop="50dp"-->
    <!--                android:text="Gender:"-->
    <!--                android:textSize="15dp"-->
    <!--                android:textStyle="italic"-->
    <!--                android:layout_gravity="left"/>-->
    <Button
        android:id="@+id/Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="64dp"
        android:enabled="true"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="@drawable/button_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Register_password"
        app:layout_constraintVertical_bias="0.055" />
    <!--            android:onClick="AfterNewRegistration"-->
            </LinearLayout>
    </ScrollView>
    </LinearLayout>

