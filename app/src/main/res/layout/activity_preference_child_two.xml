<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appBodyNavigation.appBodyPreference.PreferenceChildActivityTwo">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/userProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:enabled="true"
        android:gravity="start"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/preferenceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userProfile"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:text="@string/valueImportance"
        android:textAllCaps="false"
        android:textColor="#b2beb5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/Environment"
        style="@style/Animation.Design.BottomSheetDialog"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/preferenceText"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/preference_button_shape"
        android:padding="5dp"
        android:text="Environement"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/EnvironementDetailedDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Environment"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:enabled="true"
        android:gravity="start"
        android:text="Detailed description"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="14sp"
        android:textStyle="normal" />

    <RatingBar
        android:id="@+id/environmentRatingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preferenceText"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/Environment"
        android:numStars="3"
        android:progressTint="@color/colorPrimary"
        android:stepSize="1" />

    <Button
        android:id="@+id/FairSocial"
        style="@style/Animation.Design.BottomSheetDialog"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/EnvironementDetailedDescription"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/preference_button_shape"
        android:padding="5dp"
        android:text="Fair and Social"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/FairAndSocialDetailedDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/FairSocial"
        android:enabled="true"
        android:gravity="start"
        android:text="Detailed description"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="14sp"
        android:textStyle="normal" />

    <RatingBar
        android:id="@+id/FairSocialRatingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/environmentRatingbar"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="66dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/FairSocial"
        android:numStars="3"
        android:progressTint="@color/colorPrimary"
        android:stepSize="1" />
    <Button
        android:id="@+id/SaveButton"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="240dp"
        android:background="@drawable/preference_button_shape"
        android:clickable="true"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/FairSocial"
        android:enabled="true"
        android:gravity="start"
        android:text="@string/saveandcontinue"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="14sp"
        android:textStyle="normal" />

