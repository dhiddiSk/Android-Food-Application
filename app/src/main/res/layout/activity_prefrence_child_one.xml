<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appbody.preference.SecondPreferencesActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar_store"
        android:background="@color/colorPrimary">
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/preferenceChildOneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_store"
        android:gravity="center"
        android:layout_margin="20dp"
        android:text="@string/wheretoShop"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#808080"
        android:textSize="30sp" />

    <Button
        android:id="@+id/kauflandsupermarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/preferenceChildOneText"
        android:layout_centerInParent="true"
        android:background="@drawable/preference_body_button_shape"
        android:clickable="true"
        android:enabled="true"
        android:padding="10dp"
        android:text="Kaufland"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/lidlsupermarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kauflandsupermarket"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/preference_body_button_shape"
        android:clickable="true"
        android:enabled="true"
        android:padding="10dp"
        android:text="Lidl"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/rewesupermarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lidlsupermarket"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/preference_body_button_shape"
        android:clickable="true"
        android:enabled="true"
        android:padding="10dp"
        android:text="Rewe"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/pennysupermarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rewesupermarket"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/preference_body_button_shape"
        android:clickable="true"
        android:enabled="true"
        android:padding="10dp"
        android:text="Penny"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/edekasupermarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pennysupermarket"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/preference_body_button_shape"
        android:clickable="true"
        android:enabled="true"
        android:padding="10dp"
        android:text="Edeka"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/nettosupermarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edekasupermarket"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/preference_body_button_shape"
        android:clickable="true"
        android:enabled="true"
        android:padding="10dp"
        android:text="Netto-discount"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />


