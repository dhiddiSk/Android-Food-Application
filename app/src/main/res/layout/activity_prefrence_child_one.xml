<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appBodyNavigation.appBodyPreference.PrefrenceChildActivityOne">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/userProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:enabled="true"
        android:gravity="start"
        android:src="@drawable/user" />
    <TextView
        android:id="@+id/preferenceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userProfile"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="@string/wheretoShop"
        android:textAllCaps="false"
        android:textColor="#b2beb5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/supermarket"
        style="@style/Animation.Design.BottomSheetDialog"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/preferenceText"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/preference_button_shape"
        android:clickable="true"
        android:enabled="true"
        android:padding="5dp"
        android:text="Super markets"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/onlineStore"
        style="@style/Animation.Design.BottomSheetDialog"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/supermarket"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/preference_button_shape"
        android:clickable="true"
        android:enabled="true"
        android:padding="5dp"
        android:text="Online"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/nextPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onlineStore"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:enabled="true"
        android:padding="5dp"
        android:src="@drawable/ic_arrow_forward_black_24dp" />
</RelativeLayout>